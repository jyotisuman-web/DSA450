# find the maximum and min element in arr
def minmax(arr,k):
    arr.sort()
    print(arr)
    return (arr[k-1],arr[-k])
arr=[4,5,3,1,7,9,8]
k=3
print(minmax(arr,k))

#other way
 def get_min_max(self, arr):
        arr_max=arr[0]
        arr_min=arr[0]
        for i in range(1,len(arr)):
            if arr_max<arr[i]:
                arr_max=arr[i]
            if arr_min>arr[i]:
                arr_min=arr[i]
        return arr_min, arr_max
